
extends layout
block content
  h1 
    b= "Alterar o Filme " + TIT_PAGE
    each atribute in single_Atributes
      .w3-container 
          p.w3-xxlarge= atribute + ":"
          input.w3-input.w3-blue-grey.w3-xlarge.w3-animate-top.w3-round-large(type='text' name=atribute, value=data[atribute])
    each atribute in multi_Atributes
      div(id=atribute) 
          p.w3-xxlarge= atribute + ":"
          button.w3-input.w3-blue-grey.w3-xlarge.w3-animate-top.w3-round-large(onclick="add('"+atribute+"')")= "Adicionar um novo/a" + atribute
          input.w3-input.w3-blue-grey.w3-xlarge.w3-animate-top.w3-round-large(type='text' name=atribute value=data[atribute])
        each a in data[atribute]
            tr
                input.w3-input.w3-blue-grey.w3-xlarge.w3-animate-top.w3-round-large(type='text' name=atribute value=a)
        
    input.w3-card.w3-button.w3-text-grey.w3-animate-zoom.w3-xlarge.w3-round-large(type='submit' value='adicionar' onclick=sendform(update_action,single_Atributes,multi_Atributes)) 
