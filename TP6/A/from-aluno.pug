extends layout 
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Registo de um aluno
            .w3-container
                from.w3-container(action="/aluno" method="POST")
                    label.w3-teal
                        b Nome
                    input.w3-input.w3-border.w3-light-grey(type="text", name="nome")
                    label.w3-teal
                        b Numero / Identificador
                    input.w3-input.w3-border.w3-light-grey(type="text", name="numero")
                    label.w3-teal
                        b Curso
                    input.w3-input.w3-border.w3-light-grey(type="text", name="curso")
                    label.w3-teal
                        b Link para o Git
                    input.w3-input.w3-border.w3-light-grey(type="text", name="git")
                    input.w3-input.w3-border.w3-light-grey(type="submit", name="Enviar")

            footer.w3-container.w3-teal
                adress Gerado por Gestão de Alunos App
                    a(href="/") Voltar à página principal
