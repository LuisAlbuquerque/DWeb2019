extends layout 
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Adicionar uma nova tarefa
            .w3-container
                from.w3-container(action="/add_task" method="POST")
                    label.w3-teal
                        b Tarefa
                    input.w3-input.w3-border.w3-light-grey(type="text", name="tarefa")
                    label.w3-teal
                        b Data limite
                    input.w3-input.w3-border.w3-light-grey(type="text", name="data")
                    input.w3-input.w3-border.w3-light-grey(type="submit", name="adicionar")

        .w3-container
            h3 Tarefas
            .w3-container
                table.w3-table-all
                    tr
                        th Tarefa
                        th Data limite
                    each t in Tasks
                        tr
                            td= t.task
                            td= t.dend
            footer.w3-container.w3-teal
                adress Gerado por LMAA
